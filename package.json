{
  "version": "1.0.0",
  "name": "vue-recheck-authorizer",
  "description": "A set of Vue.js components for authentication and data interaction with Recheck Platform.",
  "repository": "https://github.com/recheck-io/vue-recheck-authorizer.git",
  "author": "ReCheck Team",
  "license": "MIT",
  "main": "dist/vue-recheck-authorizer.common.js",
  "unpkg": "dist/vue-recheck-authorizer.browser.js",
  "module": "index.js",
  "scripts": {
    "build:browser": "cross-env NODE_ENV=production webpack -p --mode production --config config/webpack.config.browser.js --progress --hide-modules",
    "build:common": "cross-env NODE_ENV=production webpack -p --mode production --config config/webpack.config.common.js --progress --hide-modules",
    "dev": "cross-env NODE_ENV=development webpack -d --mode development --config config/webpack.config.dev.js --progress --watch",
    "build": "rm -rf dist/ && npm run build:browser && npm run build:common",
    "build:docs": "vuepress build docs",
    "deploy": "sh ./deploy.sh",
    "prepare": "npm run build",
    "format": "prettier --write 'src/**/*.{js,vue}'"
  },
  "dependencies": {
    "aes256": "^1.0.4",
    "recheck-clientjs-library": "^1.0.15",
    "vue-qrcode-reader": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.16.0",
    "cross-env": "^3.2.4",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^2.3.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.2",
    "sass-loader": "^8.0.2",
    "terser-webpack-plugin": "^2.3.5",
    "vue-loader": "^15.9.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "vuepress": "^1.4.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^1.1.2"
  },
  "keywords": [
    "vue",
    "vuejs",
    "plugin",
    "recheck",
    "blockchain",
    "recheck-scanner",
    "recheck-identity",
    "recheck-authorizer",
    "recheck-platform",
    "smart-contracts",
    "aeternity",
    "ethereum",
    "data-privacy",
    "data-exchange",
    "digital-proofs",
    "decentralised-identity"
  ]
}
