{
  "version": "1.1.0",
  "name": "vue-recheck-authorizer",
  "description": "A set of Vue.js components for authentication and data interaction with Recheck Platform.",
  "repository": "https://github.com/recheck-io/vue-recheck-authorizer.git",
  "author": "ReCheck Team",
  "license": "MIT",
  "main": "dist/vue-recheck-authorizer.ssr.js",
  "browser": "dist/vue-recheck-authorizer.esm.js",
  "module": "dist/vue-recheck-authorizer.esm.js",
  "unpkg": "dist/vue-recheck-authorizer.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue",
    "src/chain/index.js",
    "src/utils/*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve dev/serve.js --mode localhost",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "format": "prettier --write 'src/**/*.{js,vue}'",
    "build:docs": "vuepress build docs",
    "deploy-docs": "sh ./deploy.sh",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "aes256": "^1.0.4",
    "recheck-clientjs-library": "^1.0.20-beta",
    "vue-qrcode-reader": "^2.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@rollup/plugin-alias": "^2.2.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@vue/cli-plugin-babel": "^4.4.1",
    "@vue/cli-service": "^4.4.1",
    "cross-env": "^7.0.2",
    "minimist": "^1.2.5",
    "prettier": "^2.0.5",
    "rollup": "^2.15.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-css-only": "^2.1.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-vue": "^5.1.9",
    "sass-loader": "^9.0.2",
    "vue": "^2.6.11",
    "vue-router": "^3.3.4",
    "vue-template-compiler": "^2.6.11",
    "vuepress": "^1.5.2",
    "vuex": "^3.5.1"
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "vue",
    "vuejs",
    "plugin",
    "recheck",
    "blockchain",
    "recheck-scanner",
    "recheck-identity",
    "recheck-authorizer",
    "recheck-platform",
    "smart-contracts",
    "aeternity",
    "ethereum",
    "data-privacy",
    "data-exchange",
    "digital-proofs",
    "decentralised-identity"
  ]
}
